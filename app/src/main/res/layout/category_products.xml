                android:id="@+id/categoryA"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center|center|center"
                android:text="DIVINE"
                android:textSize="40sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/B"
